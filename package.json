{
  "name": "react-adaptive-select",
  "private": false,
  "version": "0.0.05",
  "description": "A customizable, searchable dropdown select component for React applications. This component is adaptive to screen or parent container size.",

  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./dist/style.css": "./dist/style.css",
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepare": "npm run build",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yudiz-solutions/react-adaptive-select.git"
  },
  "keywords": [
    "react",
    "dropdown",
    "select",
    "searchable",
    "adaptive",
    "responsive",
    "component",
    "UI",
    "react-component",
    "dropdown-select",
    "searchable-select",
    "adaptive-select"
  ],
  "author": "Sahibe Alam",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.1"
  }
}
